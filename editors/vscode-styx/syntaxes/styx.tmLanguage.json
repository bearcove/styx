{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Styx",
  "scopeName": "source.styx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#entry" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "comment": "Doc comment - only at start of line",
          "name": "comment.block.documentation.styx",
          "match": "^\\s*///.*$"
        },
        {
          "comment": "Line comment - only at start of line",
          "name": "comment.line.double-slash.styx",
          "match": "^\\s*//(?!/)[^\n]*"
        },
        {
          "comment": "Inline comment after whitespace",
          "name": "comment.line.double-slash.styx",
          "match": "(?<=\\s)//(?!/)[^\n]*"
        }
      ]
    },
    "entry": {
      "patterns": [
        {
          "comment": "Entry: bare key followed by value",
          "begin": "^(\\s*)(?!//)([^\\s{}(),\"=@>][^\\s{}(),\">]*)(?=\\s|$|\\{|\\()",
          "beginCaptures": {
            "1": { "name": "punctuation.whitespace.styx" },
            "2": { "name": "entity.name.tag.styx" }
          },
          "end": "$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#inline-comment" },
            { "include": "#value-content" }
          ]
        },
        {
          "comment": "Entry starting with @ (tag as key)",
          "begin": "^(\\s*)(@[A-Za-z_][A-Za-z0-9_\\-]*|@)(?=\\s|$|\\{|\\()",
          "beginCaptures": {
            "1": { "name": "punctuation.whitespace.styx" },
            "2": { "name": "entity.name.tag.styx" }
          },
          "end": "$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#inline-comment" },
            { "include": "#value-content" }
          ]
        },
        {
          "comment": "Entry starting with quoted string as key",
          "begin": "^(\\s*)(\"[^\"]*\")(?=\\s|$|\\{|\\()",
          "beginCaptures": {
            "1": { "name": "punctuation.whitespace.styx" },
            "2": { "name": "entity.name.tag.styx" }
          },
          "end": "$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#inline-comment" },
            { "include": "#value-content" }
          ]
        },
        { "include": "#value-content" }
      ]
    },
    "block-entry": {
      "patterns": [
        {
          "comment": "Inline entry: key value (ends at comma or closing brace)",
          "begin": "(?!//)([^\\s{}(),\"=@>][^\\s{}(),\">]*)(?=\\s)",
          "beginCaptures": {
            "1": { "name": "entity.name.tag.styx" }
          },
          "end": "(?=,|\\})|$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#value-content" }
          ]
        },
        {
          "comment": "Entry with @ key",
          "begin": "(@[A-Za-z_][A-Za-z0-9_\\-]*|@)(?=\\s|\\{|\\()",
          "beginCaptures": {
            "1": { "name": "entity.name.tag.styx" }
          },
          "end": "(?=,|\\})|$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#value-content" }
          ]
        },
        {
          "comment": "Entry with quoted key",
          "begin": "(\"[^\"]*\")(?=\\s|\\{|\\()",
          "beginCaptures": {
            "1": { "name": "entity.name.tag.styx" }
          },
          "end": "(?=,|\\})|$",
          "contentName": "meta.value.styx",
          "patterns": [
            { "include": "#value-content" }
          ]
        },
        { "include": "#value-content" }
      ]
    },
    "inline-comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.styx",
          "match": "(?<=\\s)//(?!/)[^\n]*"
        }
      ]
    },
    "value-content": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#heredoc" },
        { "include": "#builtin-tags" },
        { "include": "#custom-tags" },
        { "include": "#unit" },
        { "include": "#blocks" },
        { "include": "#sequences" },
        { "include": "#bare-value" },
        { "include": "#punctuation" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.styx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.styx",
              "match": "\\\\(?:[\\\\\"nrt]|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]{1,6}\\})"
            }
          ]
        },
        {
          "name": "string.quoted.raw.styx",
          "begin": "r(#+)\"",
          "end": "\"\\1"
        }
      ]
    },
    "heredoc": {
      "patterns": [
        { "comment": "C", "begin": "<<([A-Z][A-Z0-9_]*),c\\b", "end": "^(\\s*)\\1\\s*$", "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.styx" } }, "endCaptures": { "0": { "name": "punctuation.definition.string.end.styx" } }, "contentName": "meta.embedded.block.c", "patterns": [{ "include": "source.c" }] },
        { "comment": "C++", "begin": "<<([A-Z][A-Z0-9_]*),(?:cpp|c\\+\\+|cxx)\\b", "end": "^(\\s*)\\1\\s*$", "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.styx" } }, "endCaptures": { "0": { "name": "punctuation.definition.string.end.styx" } }, "contentName": "meta.embedded.block.cpp", "patterns": [{ "include": "source.cpp" }] },
